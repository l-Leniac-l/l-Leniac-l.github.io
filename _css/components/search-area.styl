.search-area
  po fixed
  zi 2
  wi 3.2%
  he 100%
  pa 0.5% 0
  bg lighten(base-color-2,65%)
  ta center

  > .home

    > .link
      ds block
      wi 3.5%
      he 45px
      margin-left 10%
      td none

  > .search
    po relative

    > .open
      ds block
      wi 3.5%
      he 45px
      margin-left 10%
      td none

    > .form
      po absolute
      vi hidden
      transition all ease 0.5s
      op 0
      top 0
      left 2.9em
      width 25em

      > .input
        float left
        wi 86%
        he 35px
        bo 1px solid lighten(base-color-2,45%)
        fs responsive 10px 14px
        pa 0 0.5em
        cl base-color-1

      > .button
        ds block
        po absolute
        right 0
        zi 1
        wi 10%
        he 35px
        bg transparent
        bo none
        cursor pointer

  > .tags
    position relative

    > .open
      ds block
      wi 3.5%
      he 45px
      margin-left 10%
      td none


    > .list
      po absolute
      vi hidden
      transition all ease 0.5s
      op 0
      top 0
      left 2.9em
      wi auto
      bg lighten(base-color-2,65%)
      bor 0.2em

      > .tag
        ds table
        wi 100%
        he 30px

        > .link
          ds table-cell
          wi 100%
          he 100%
          ta center
          va middle
          cl base-color-1
          td none
          pa 0.1em 1em
          &:hover
            bg lighten(base-color-2,45%)
