.post-list
  po absolute
  right 0%
  wi 96%
  padding-bottom 50px
  +breakpoint(320px,'portrait')
    wi 100%

  > .search_msg
    fs responsive 12px 24px
    fw lighter
    ma 0.7% 0
    cl darken(text-color-2, 20%)
    ta center

  > .post
    po relative
    ds flex
    flex-direction column
    wi 96%
    border-bottom 1px solid darken(text-color-2, 20%)
    ma 0 0 1% 2%
    clear fix

    &:last-child
      border-bottom none

    &.-search
      > .link
        wi 100%
        ta center
        ma 0.7% 0

      > .description
        ma 0.7% 0

    > .header
      ma 2% 0
      > .title
        fs responsive 12px 24px
        fw lighter
        ma 0.5% 0

        > .term
          bg #FFEB3B

        > .link
          cl base-color-1
          td none
          ma 0.5% 0
          &:hover
            td underline

      > .date
        fs responsive 8px 14px
        fw normal
        color darken(text-color-2, 50%)

    .content
      wi 100%
      ds flex
      flex-flow no-wrap space-between
      flex-direction row

      .image
        wi 120px
        he 120px
        bo 2px solid darken(text-color-2, 20%)
        bor 50%
        overflow hidden

        > img
          wi 100%
          he 100%

      > .description
        wi 80%
        he 100%
        padding 20px 0 0 20px
        fs responsive 10px 16px
        fw normal
        ta justify

        > .term
          bg #FFEB3B

    > .footer
      ds flex
      flex-direction row
      justify-content space-between
      ma 2% 0 0 0

      > .link
        left 0
        ta left
        cl base-color-1
        td none
        ma 1.3% 0
        &:hover
          td underline

      > .tagList
        ta left
        cl base-color-1
        ma 1% 0

        > .tag
          ds table-cell
          va middle
          pa 0 0.3%

          > a
            cl base-color-1
            td none
            &:hover
              td underline
